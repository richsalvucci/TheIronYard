<h2>New Post</h2>

<%= form_for @blog do |p| %>
    <%= p.label :title %>
    <%= p.text_field :title, placeholder: "Title" %>
    <br>
    <div class="contentarea">
    <%= p.label :content %>
    <%= p.text_area :content, placeholder: "Type your post here." %>
    </div>
    <br>
    <%= p.submit "Post" %>
<% end %>