%div.new_customer
  = form_for @customer do |f|
    = f.label :name
    = f.text_field :name
    %br
    = f.label :address
    = f.text_field :address
    %br
    = f.label :state
    = f.select :state, options_for_select(Customer::STATE, @customer.state), include_blank: "Select"
    %br
    = f.label :zipcode
    = f.text_field :zipcode
    %br
    = f.label :phone_number
    = f.text_field :phone_number
    %br
    %br
    = f.submit "Save Customer"

